<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bg_maroon"
    tools:context="com.wgt.hotsausagenew.activity.PaymentActivity">
    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:adjustViewBounds="true"
        android:scaleType="fitXY"
        android:src="@drawable/header_logo"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <LinearLayout
        android:layout_width="289dp"
        android:layout_height="wrap_content"
        android:background="@drawable/text_field"
        android:orientation="horizontal"
        android:padding="10dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.01999998">

        <TextView
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:text="Total"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text_size" />

        <TextView
            android:id="@+id/tV_total_amt"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:text="£9.10"
            android:textColor="@android:color/black"
            android:textSize="@dimen/normal_text_size" />

    </LinearLayout>

    <TextView
        android:id="@+id/tV_total"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/currency_button"
        android:gravity="center"
        android:text="=Total"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tV_pound_5"
        app:layout_constraintDimensionRatio="w,16:1"
        app:layout_constraintEnd_toStartOf="@+id/tV_round_to_next_pound"
        app:layout_constraintHorizontal_chainStyle="packed"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tV_pound_5" />

    <TextView
        android:id="@+id/tV_round_to_next_pound"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/currency_button"
        android:gravity="center"
        android:text="=Round to\nnext pound\nfrom total"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tV_pound_5"
        app:layout_constraintEnd_toStartOf="@+id/tV_pound_5"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tV_total"
        app:layout_constraintTop_toTopOf="@+id/tV_pound_5" />

    <TextView
        android:id="@+id/tV_pound_5"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/currency_button"
        android:gravity="center"
        android:text="£5"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toStartOf="@+id/tV_pound_10"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tV_round_to_next_pound"
        app:layout_constraintTop_toBottomOf="@+id/imageView2"
        app:layout_constraintVertical_bias="0.13999999" />

    <TextView
        android:id="@+id/tV_pound_10"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginBottom="8dp"
        android:background="@drawable/currency_button"
        android:gravity="center"
        android:text="£10"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tV_pound_5"
        app:layout_constraintEnd_toStartOf="@+id/tV_pound_20"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tV_pound_5"
        app:layout_constraintTop_toTopOf="@+id/tV_pound_5" />

    <TextView
        android:id="@+id/tV_pound_20"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/currency_button"
        android:gravity="center"
        android:text="£20"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tV_pound_5"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.5"
        app:layout_constraintStart_toEndOf="@+id/tV_pound_10"
        app:layout_constraintTop_toTopOf="@+id/tV_pound_5" />

    <TableLayout
        android:id="@+id/tableLayout2"
        android:layout_width="290dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="8dp"
        android:layout_marginTop="8dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tV_pound_5"
        app:layout_constraintVertical_bias="0.050000012">

        <TableRow>

            <Button
                android:id="@+id/calc_7"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="7"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/calc_8"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="8"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/calc_9"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="9"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/calc_4"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="4"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/calc_5"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="5"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/calc_6"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="6"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/calc_1"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="1"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/calc_2"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="2"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/calc_3"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="3"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />
        </TableRow>

        <TableRow>

            <Button
                android:id="@+id/calc_0"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="0"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/calc_period"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="."
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />

            <Button
                android:id="@+id/calc_clear"
                android:layout_margin="@dimen/calc_btn_margin"
                android:background="@drawable/calculator_button"
                android:text="C"
                android:textColor="@android:color/black"
                android:textSize="@dimen/normal_text_size" />
        </TableRow>
    </TableLayout>

    <Button
        android:id="@+id/btn_card"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_button_raised"
        android:text="Card"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tV_amt_paid"
        app:layout_constraintStart_toStartOf="@+id/tV_total"
        app:layout_constraintTop_toTopOf="@+id/tV_amt_paid" />

    <Button
        android:id="@+id/btn_change"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="8dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/card_button_raised"
        android:text="Change"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintBottom_toBottomOf="@+id/tV_amt_paid"
        app:layout_constraintEnd_toEndOf="@+id/tV_pound_20"
        app:layout_constraintTop_toTopOf="@+id/tV_amt_paid" />

    <TextView
        android:id="@+id/tV_amt_paid"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginEnd="5dp"
        android:layout_marginStart="5dp"
        android:layout_marginTop="8dp"
        android:background="@drawable/calculator_total_button"
        android:gravity="right|center"
        android:paddingRight="30dp"
        android:text="10.20"
        android:textColor="@android:color/black"
        android:textSize="@dimen/normal_text_size"
        app:layout_constraintEnd_toEndOf="@+id/tableLayout2"
        app:layout_constraintStart_toStartOf="@+id/tableLayout2"
        app:layout_constraintTop_toBottomOf="@+id/tableLayout2" />
</android.support.constraint.ConstraintLayout>
